nthreads = 3
batch_size = 1
batch_format = zip

[crypto]
mode = asymmetric
all     = true
archive = false
force   = false
pub_key_path = test/pub_key.bin
pr_key_path  = test/pr_key.bin
# sym_key_path = test/sym_key.bin   # do not use both key modes simultaneously
